{
    "name": "willnode/crm-toolkit",
    "type": "project",
    "description": "The CodeIgniter framework v4",
    "homepage": "https://github.com/willnode/crm-toolkit",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "ext-curl": "*",
        "ext-intl": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "CodeIgniter\\": "system/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@composer dump-autoload",
            "CodeIgniter\\ComposerScripts::postUpdate"
        ]
    },
    "support": {
        "docs": "https://willnode.github.io/crm-toolkit/",
        "source": "https://github.com/willnode/crm-toolkit"
    }
}
